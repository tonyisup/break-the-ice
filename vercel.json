{
  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        { "key": "Service-Worker-Allowed", "value": "/" }
      ]
    },
    {
      "source": "/workbox-*.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "functions": {
    "api/question.ts": {
      "includeFiles": "dist/index.html"
    }
  },
  "rewrites": [
    {
      "source": "/question/:id",
      "destination": "/api/question"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
